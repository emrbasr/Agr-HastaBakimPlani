@model Entities.Concrete.AgriHastaBakimPlani

@{
    ViewData["Title"] = "Ağrı Hasta Bakım Planı";
}
<div class="container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12 text-center">
                <img src="path/to/hospital-logo.png" alt="Hastane Logosu" class="img-fluid" />
                <h1>Ağrı Hasta Bakım Planı</h1>
                <img src="path/to/health-ministry-logo.png" alt="Sağlık Bakanlığı Logosu" class="img-fluid" />
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Döküman No</th>
                            <th>Yayın Tarihi</th>
                            <th>Rev.No</th>
                            <th>Rev.Tarihi</th>
                            <th>Sayfa No</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>KLN.PL.05</td>
                            <td>01.08.2016</td>
                            <td>00</td>
                            <td>01.08.2016</td>
                            <td>1/1</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Hastanın Adı Soyadı</th>
                            <th>Hemşirelik Tanısı</th>
                            <th>Doğum Tarihi</th>
                            <th>Tanım</th>
                            <th>Tanı</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Hasta?.Ad @Model.Hasta?.Soyad</td>
                            <td>@Model.Hemsire?.Ad @Model.Hemsire?.Soyad</td>
                            <td>@Model.Hasta?.DogumTarihi.ToString("dd.MM.yyyy")</td>
                            <td>@Model.Neden</td>
                            <td>@Model.TaniOlculeri</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h2>Ağrı</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Amacı</th>
                            <th>Girişimler</th>
                            <th>Değerlendirme</th>
                            <th>Süreç</th>
                            <th>Sonuç</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Amac</td>
                            <td>
                                <ul id="girisimlerList">
                                    @foreach (var item in Model.Girisimler)
                                    {
                                        <li>@item.Description</li>
                                    }
                                </ul>
                                <input type="text" id="girisimlerInput" />
                                <button type="button" onclick="addItem('girisimlerList', 'girisimlerInput')">+</button>
                            </td>
                            <td>@Model.Degerlendirme</td>
                            <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                            <td>
                                <ul id="sonucList">
                                    @foreach (var item in Model.Sonuclar)
                                    {
                                        <li>@item.Description</li>
                                    }
                                </ul>
                                <input type="text" id="sonucInput" />
                                <button type="button" onclick="addItem('sonucList', 'sonucInput')">+</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Model yüklenemedi.
        </div>
    }
</div>

@section Scripts {
    <script>
        function addItem(listId, inputId) {
            var input = document.getElementById(inputId);
            var list = document.getElementById(listId);

            if (input.value.trim() !== "") {
                var li = document.createElement("li");
                var checkbox = document.createElement("input");
                checkbox.type = "checkbox";
                checkbox.name = listId + "[]";
                checkbox.value = input.value;
                checkbox.checked = true;

                li.appendChild(checkbox);
                li.appendChild(document.createTextNode(input.value));
                list.appendChild(li);

                input.value = "";
            }
        }
    </script>
}