@model Entities.Concrete.AgriHastaBakimPlani

@{
    ViewData["Title"] = "Ağrı Hasta Bakım Planı";
}

<div class="container">
    @if (Model != null)
    {
        

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="header-container">
                    <img src="~/images/HastahaneLogo.png" alt="Hastane Logosu" class="logo" />
                    <h1 class="header-title">Ağrı Hasta Bakım Planı</h1>
                    <img src="~/images/BakanlıkLogo.png" alt="Sağlık Bakanlığı Logosu" class="logo" />
                </div>
            </div>
        </div>


        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Döküman No</th>
                            <th>Yayın Tarihi</th>
                            <th>Rev.No</th>
                            <th>Rev.Tarihi</th>
                            <th>Sayfa No</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>KLN.PL.05</td>
                            <td>01.08.2016</td>
                            <td>00</td>
                            <td>01.08.2016</td>
                            <td>1/1</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Hasta Adı:</strong> @Model.Hasta?.Ad @Model.Hasta?.Soyad</p>
                <p><strong>Doğum Tarihi:</strong> @Model.Hasta?.DogumTarihi.ToString("dd.MM.yyyy")</p>
                <p><strong>Tanı:</strong> @Model.Hasta?.Tani</p>
            </div>
            <div class="col-md-6">
                <p><strong>Hemşirelik Tanısı:</strong> @Model.Hasta?.HemsireTanisi</p>
                <p><strong>Tanım:</strong> @Model.Hasta?.Tanim</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h2>Ağrı</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Amacı</th>
                            <th>Girişimler</th>
                            <th>Değerlendirme</th>
                            <th>Süreç</th>
                            <th>Sonuç</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Amac</td>
                            <td>
                                <ul id="girisimlerList">
                                    @for (int i = 0; i < Model.Girisimler.Count; i++)
                                    {
                                        <li>@(i + 1). @Model.Girisimler[i].Description</li>
                                    }
                                </ul>
                                <form asp-action="EkleGirisim" method="post">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <input type="text" name="girisim" id="girisimlerInput" />
                                    <button type="submit">+</button>
                                </form>
                            </td>
                            <td>@Model.Degerlendirme</td>
                            <td>@Model.Tarih.ToString("dd.MM.yyyy")</td>
                            <td>
                                <ul id="sonucList">
                                    @foreach (var item in Model.Sonuclar)
                                    {
                                        <li>@item.Description</li>
                                    }
                                </ul>
                                <input type="text" id="sonucInput" />
                                <button type="button" onclick="addItem('sonucList', 'sonucInput')">+</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


