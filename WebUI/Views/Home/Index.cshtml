@model Entities.Concrete.AgriHastaBakimPlani

@{
    ViewData["Title"] = "Ağrı Hasta Bakım Planı";
}

<div class="container">
    @if (Model != null)
    {
        

        <div class="row">
            <div class="col-md-12 text-center">
                <div class="header-container">
                    <img src="~/images/HastahaneLogo.png" alt="Hastane Logosu" class="logo" />
                    <h1 class="header-title">Ağrı Hasta Bakım Planı</h1>
                    <img src="~/images/BakanlıkLogo.png" alt="Sağlık Bakanlığı Logosu" class="logo" />
                </div>
            </div>
        </div>


        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Döküman No</th>
                            <th>Yayın Tarihi</th>
                            <th>Rev.No</th>
                            <th>Rev.Tarihi</th>
                            <th>Sayfa No</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>KLN.PL.05</td>
                            <td>01.08.2016</td>
                            <td>00</td>
                            <td>01.08.2016</td>
                            <td>1/1</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Hasta Adı:</strong> @Model.Hasta?.Ad @Model.Hasta?.Soyad</p>
                <p><strong>Doğum Tarihi:</strong> @Model.Hasta?.DogumTarihi.ToString("dd.MM.yyyy")</p>
                <p><strong>Tanı:</strong> @Model.Hasta?.Tani</p>
            </div>
            <div class="col-md-6">
                <p><strong>Hemşirelik Tanısı:</strong> @Model.Hasta?.HemsireTanisi</p>
                <p><strong>Tanım:</strong> @Model.Hasta?.Tanim</p>
            </div>
        </div>

         <div class="row mt-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 8.33%">Neden</th>
                        <th style="width: 16.66%">Tanı Ölçütleri</th>
                        <th style="width: 8.33%">Amaç</th>
                        <th style="width: 33.33%">Girişimler</th>
                        <th style="width: 8.33%">Değerlendirme</th>
                        
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @foreach (var item in Model.Nedenler)
                            {
                                <div>
                                    <input type="checkbox" id="neden_@item.Id" name="neden_@item.Id" @(item.IsChecked ? "checked" : "") disabled />
                                    <label for="neden_@item.Id">@item.Description</label>
                                </div>
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.TaniOlcutleri)
                            {
                                <div>
                                    <input type="checkbox" id="taniOlculeri_@item.Id" name="taniOlculeri_@item.Id" @(item.IsChecked ? "checked" : "") disabled />
                                    <label for="taniOlculeri_@item.Id">@item.Description</label>
                                </div>
                            }
                        </td>
                        <td>
                            @foreach (var item in Model.Amaclar)
                            {
                                <div>
                                    <input type="checkbox" id="amac_@item.Id" name="amac_@item.Id" @(item.IsChecked ? "checked" : "") disabled />
                                    <label for="amac_@item.Id">@item.Description</label>
                                </div>
                            }
                        </td>
                        <td>
                            <ul>
                                @foreach (var item in Model.Girisimler)
                                {
                                    <li>@item.Description</li>
                                }
                            </ul>
                            <form asp-action="EkleGirisim" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="text" name="girisim" />
                                <button type="submit">+</button>
                            </form>
                        </td>
                       
                        <td>
                            @foreach (var item in Model.Degerlendirmeler)
                            {
                                <div>
                                    <strong>Tarih:</strong> @Model.Tarih.ToShortDateString()
                                </div>
                                <div>
                                    <strong>Saat:</strong> @Model.Tarih.ToShortTimeString()
                                </div>
                                <div>
                                    <strong>Değerlendirme</strong>
                                </div>
                                <div>
                                    <input type="radio" id="degerlendirme_@item.Id" name="degerlendirme" value="@item.Description" @(item.IsChecked ? "checked" : "") disabled />
                                    <label for="degerlendirme_@item.Id">@item.Description</label>
                                </div>

                                <div>
                                    <input type="checkbox" name="degerlendirme1" value="1" /> Sorun giderildi<br />
                                    <input type="checkbox" name="degerlendirme2" value="2" /> Sorun kısmen giderildi<br />
                                    <input type="checkbox" name="degerlendirme3" value="3" /> Sorun giderilmedi<br />
                                </div>
                                <label for="not">Not:</label>
                                <input type="text" id="not" name="not" />
                                <button type="button" onclick="addNote()">+</button>
                                <ul id="noteList"></ul>
                            }
                            
                            
                        </td>
                       
                        
                    </tr>
                </tbody>
            </table>
        </div>

